{
  "name": "@dtn/api-lib",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "tsc": "tsc --build",
    "build": "rimraf ./dist && tsc",
    "precommit": "lint-staged",
    "format": "prettier --config .prettierrc.js",
    "lint:ts": "tslint --config tslint.json --project tsconfig.json",
    "lint": "npm run-script format -- \"src/**/*.{ts,tsx}\" --write && npm run-script lint:ts"
  },
  "peerDependencies": {
    "rxjs": ">= 6 < 7"
  },
  "devDependencies": {
    "@dtn/types-lib": "^0.0.1",
    "@dtn/i18n-lib": "^0.0.1",
    "@dtn/prettier-config": "^0.2.2",
    "@dtn/ts-config": "^0.2.2",
    "@dtn/tslint-config": "^0.2.2",
    "lint-staged": "^8.1.5",
    "prettier": "~1.17.0",
    "tslint": "^5.9.1",
    "typescript": "3.4.3"
  }
}
